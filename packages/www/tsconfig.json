{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@terminal/functions/*": ["../functions/src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "exclude": ["dist"]
}
